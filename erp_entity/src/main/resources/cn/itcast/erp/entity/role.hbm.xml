<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="cn.itcast.erp.entity.Role" table="role">
        <id name="uuid">
            <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
                <param name="sequence_name">role_seq</param>
            </generator>
        </id>

        <!-- 多对多关联配置， 角色权限中间表 role_menu -->
        <property name="name"/>
        <bag name="menus" order-by="menuuuid" table="role_menu">
            <key column="roleuuid"></key>
            <many-to-many column="menuuuid" class="cn.itcast.erp.entity.Menu"></many-to-many>
        </bag>

    </class>
</hibernate-mapping>
